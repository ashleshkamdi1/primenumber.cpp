#include <iostream>
using namespace std;

bool checkPrime(int n);

int main()
{
    int n, i;
    bool result = false;

    cout << "Enter a positive  integer: ";
    cin >> n;

    for(i = 2; i <= n/2; ++i) 
    { if (checkPrime(i)) 
        {   if (checkPrime(n - i))
         {    cout << n << " = " << i << " + " << n-i << endl;
                result = true;
         }
        }
    }

    if (!result)
      cout << n << " can't be expressed as sum of two prime numbers.";

    return 0;
}
bool checkPrime(int n)                              // to check if prime or not
{
    int i;
    bool prime_or_not = true;

    // 0 and 1 are not prime numbers
    if (n == 0 || n == 1) {
        prime_or_not = false;
    }
    else {
        for(i = 2; i <= n/2; ++i) {
            if(n % i == 0) {
                prime_or_not = false;
                break;
            }
        }
    }

    return prime_or_not;
}
